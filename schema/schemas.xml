<?xml version="1.0"?>
<!-- 
Custom schema locating file (see the documentation or default file for
addition help)

Current specific formats:
  nXML locating rules
  XHTML5 schema

Glob rules:
  file.xml uses file.rnc
 
 -->

<locatingRules xmlns="http://thaiopensource.com/ns/locating-rules/1.0">
  <transformURI fromPattern="*.xml" toPattern="*.rnc"/>

  <namespace ns="http://thaiopensource.com/ns/locating-rules/1.0"
	     uri="locate.rnc"/>
  <namespace ns="http://www.w3c.org/1999/xhtml" typeId="XHTML5"/>

  <documentElement localName="locatingRules" uri="locate.rnc"/>
  <documentElement localName="html" typeId="XHTML5"/>

  <uri pattern="*.html" typeId="XHTML5"/>
  <uri pattern="*.xhtml" typeId="XHTML5"/>

  <typeId id="XHTML5" uri="xhtml5.rnc"/>
</locatingRules>
